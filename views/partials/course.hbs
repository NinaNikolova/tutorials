<div class="card mb-4">
    <img class="card-img-top" src="{{imageUrl}}" alt="{{title}}" width="400" />
    <div class="card-body">
        <h4 class="card-title">{{title}}</h4>
        {{#unless user}}
        <small class="float-right">Enrolled: {{usersCount}}</small>
        {{/unless}}
    </div>
    {{#if user}}
    <div class="card-footer">
        <a href="/course/{{_id}}/details"><button type="button" class="btn btn-primary">Details</button></a>
        <small class="float-right">{{createdAt}}</small>
    </div>
    {{/if}}
</div>